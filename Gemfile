source 'https://rubygems.org'

gem 'jekyll', '~> 3.8.2'

group :jekyll_plugins do
  gem 'jekyll_pages_api', git: 'https://github.com/18f/jekyll_pages_api'
  gem 'hawkins'
  gem 'jekyll-toc', git: 'https://github.com/jfredrickson5/jekyll-toc'
end

group :development, :test do
  gem 'rake'
  gem 'html-proofer'
  gem 'eslintrb'
end
